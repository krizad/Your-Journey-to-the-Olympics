        app:layout_constraintTop_toTopOf="@+id/seat13" />

    <TextView
        android:id="@+id/row_E"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="E"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/seat17"
        app:layout_constraintStart_toStartOf="@+id/row_D"
        app:layout_constraintTop_toTopOf="@+id/seat17" />

