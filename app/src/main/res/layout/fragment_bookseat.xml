    <ImageView
        android:id="@+id/seat12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/seat8"
        app:layout_constraintTop_toTopOf="@+id/seat11" />

    <ImageView
        android:id="@+id/seat7"
        android:layout_width="40dp"
