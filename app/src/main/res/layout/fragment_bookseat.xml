        android:id="@+id/bookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:background="#012067"
        android:text="@string/book1"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seatDriver" />

    <TextView
        android:id="@+id/row_A"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/seat1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seat1" />

    <TextView
        android:id="@+id/row_B"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/seat5"
        app:layout_constraintStart_toStartOf="@+id/row_A"
        app:layout_constraintTop_toTopOf="@+id/seat5" />

    <TextView
        android:id="@+id/row_C"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:gravity="center"
