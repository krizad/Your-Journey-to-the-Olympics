    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00392626"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context=".ui.busToEvent.BusToEventFragment">


    <ImageView
        android:id="@+id/seat18"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/seat14"
        app:layout_constraintTop_toTopOf="@+id/seat17" />

    <ImageView
        android:id="@+id/seat17"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/seat13"
        app:layout_constraintTop_toBottomOf="@+id/seat13" />

    <ImageView
        android:id="@+id/seat20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/seat16"
        app:layout_constraintTop_toTopOf="@+id/seat19" />

    <ImageView
        android:id="@+id/seat19"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@+id/seat15"
        app:layout_constraintTop_toTopOf="@+id/seat18" />

    <ImageView
        android:id="@+id/seat15"
        android:layout_width="40dp"
